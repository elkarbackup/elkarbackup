NameVirtualHost *:80
<VirtualHost elkarbackup:80>
	ServerAdmin webmaster@localhost

	DocumentRoot /usr/share/elkarbackup/web

    <directory /usr/share/elkarbackup/web>
        RewriteEngine On
        RewriteCond %{REQUEST_FILENAME} !-f
        RewriteRule ^(.*)$ app.php [QSA,L]
        AllowOverride None
    </directory>

	ErrorLog ${APACHE_LOG_DIR}/elkarbackup.error.log

	# Possible values include: debug, info, notice, warn, error, crit,
	# alert, emerg.
	LogLevel warn

	CustomLog ${APACHE_LOG_DIR}/elkarbackup.access.log combined
</VirtualHost>
